 <% include ../partials/header.ejs %>
	<div class="container">
		
<div class="container">
        
            <h1><%=brewery.name%></h1>

			<div class = 'list-item-info'>
				<h5>Consensus Rating: <%=brewery.rating%>/5 stars</h5>
				<h5>Price Level: <%=brewery.price%></h5>
				<h5>Address: <a href="<%=brewery.map%>"><%=brewery.location%></a></h5>
				<h5>Phone: <%=brewery.phone%></h5>
			</div>

			<div>
				<h3>Hours: </h3>
				<%if (brewery.hours) {%>
				<%brewery.hours.forEach((hour) => {%>
				<div class="list-item-info">
					<li><%=hour%></li>
				</div>
				<%})}%>
			</div>
			<form action="/user" method="post">
				<input type="hidden" name="_id" value="<%=brewery.id%>">
				<button type="submit" value="Check In">Check In</button>
			</form>

    <br>
        <div class="row">
            <a href="<%=brewery.website%>"><%=brewery.name%> Website</a>
        </div>
    </div>
</body>
</html>