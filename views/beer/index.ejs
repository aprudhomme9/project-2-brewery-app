<% include ../partials/header.ejs %>

       <header>
           <h1>All of the beer</h1>
               <br>
               <%beer.forEach((el, i) => {%>
                   <%if(i % 3 == 0 && 0 != 0){%>
                       <div class="card-group">
                       <%}%>
                       <div class="card">
                       <div class="card-body">
                       <a class="card-title" href="/beer/<%=beer[i].id%>"><%=el.name%></a>
                       <p class="beerindex card-text"><%=el.brewery.name%></p>
                   </div>
                    </div><br>
           <%});%>

       </div>
   </div>

       </header>

</body>